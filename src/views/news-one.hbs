{{#if news}}
<div class="row">
    <div class="card">
        <img src='http://localhost:3000/{{news.cover}}' class="card-img-top" style="height: 200px; object-fit: contain;"
            alt=''>
        <div class="card-body">
            <h5 class="card-title">{{news.title}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Автор: </h6>
            <h6 class="card-subtitle mb-2 text-muted">Дата создания:
                {{news.createdAt}}</h6>
            <p class="card-text">{{news.description}}</p>
        </div>
    </div>

